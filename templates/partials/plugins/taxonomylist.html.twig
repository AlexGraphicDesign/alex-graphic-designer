{% set taxlist = children_only is defined ? taxonomylist.getChildPagesTags() : taxonomylist.get() %}

{% if taxlist %}
  {% for tax,value in taxlist[taxonomy] %}
      {% set label_class = uri.param(taxonomy) == tax ? 'badge-primary' : 'badge-secondary' %}
      <a class="badge badge-pill {{ label_class }}" href="{{ base_url }}/{{ taxonomy }}{{ config.system.param_sep }}{{ tax }}">{{ tax }}</a>
  {% endfor %}
{% endif %}
