{# Footer #}

<footer class="footer">
    <div class="container">
      <div class="row align-items-center mb-4">
        <div class="col-sm-4">
            <div class="footer__logo">{% include 'partials/logo.html.twig' %}</div>
        </div>
        <div class="col-sm-4">

        </div>
        <div class="col-sm-4">
          <ul class="footer__social mb-0">
            {% for item in theme_var('footer-social') %}
            <li class="footer__social__item">
                <a class="footer__social__link" href="{{ item.socialIconLink }}" title="{{ item.socialIconText }}" target="_blank">
                    <i class="{{ item.socialIconClass }}" aria-hidden="true"></i>
                </a>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="row align-items-center footer__legal">
        <div class="col-sm-6 text-sm-left">
            <p class="footer__legal__text mb-0">{{ theme_var('footer-text') }}</p>
        </div>
        <div class="col-sm-6">
          {% if theme_var('footer-links')|length > 0 %}
            <ul class="footer__legal__list mb-0">
              {% for item in theme_var('footer-links') %}
              <li class="footer__legal__list__item"><a href="{{ item.url }}" title="{{ item.text }}">{{ item.text }}</a></li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>
    </div>

</footer>
