{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="shortcut icon" href="{{ url('theme://images/favicon/favicon.ico') }}" type="image/x-icon">
    <link rel="icon" href="{{ url('theme://images/favicon/favicon.ico') }}" type="image/x-icon">

    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
      {# {% do assets.addCss('https://unpkg.com/purecss@1.0.0/build/pure-min.css', 100) %} #}
      {% do assets.addCss('theme://css/style.min.css', 99) %}
      {% do assets.addCss('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', 98) %}
    {% endblock %}

    {% block javascripts %}
      {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
          {% do assets.add('https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js') %}
          {% do assets.add('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') %}
      {% endif %}

      {% if config.system.debugger.enabled %}
        {% do assets.addJs('https://code.jquery.com/jquery-2.1.3.min.js', {priority: 101, group:'bottom'}) %}
      {% else %}
        {% do assets.addJS('https://code.jquery.com/jquery-3.3.1.min.js', {priority: 100, group:'bottom'}) %}
      {% endif %}
        {% do assets.addJS('https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js', {priority: 99, group:'bottom'}) %}
        {% do assets.addJS('theme://js/scripts.min.js', {priority: 98, group:'bottom', loading:'async'}) %}
    {% endblock %}

    {% block assets deferred %}
      {{ assets.css()|raw }}
      {{ assets.js()|raw }}
    {% endblock %}

{% endblock head %}
</head>

<body id="top" class="{{ page.header.body_classes }}">

{% block header %}
  <header id="header" class="header fixed-top" role="heading">
      {% include 'partials/navigation.html.twig' %}
  </header>
{% endblock %}

{% block body %}
  <main id="main-content" role="main">
    {% block hero %}
    {% endblock %}
    {% block content %}
    {% endblock %}
  </main>
{% endblock %}

{% block footer %}
  <footer id="footer" class="footer">
      <div class="container">
      {% include 'partials/footer.html.twig' %}
      </div>
      <div class="back-to-top">
          <a class="back-to-top__link js-scroll" title="Retour haut de page" href="#top">
              <i class="fa fa-arrow-up" aria-hidden="true"></i>
          </a>
      </div>
  </footer>
{% endblock %}

{% block bottom %}
    {{ assets.js('bottom')|raw }}
{% endblock %}

</body>
</html>
