<section id="{{ id }}" class="section hero hero__image" {% if hero_image %} style="background-image:url({{hero_image.url() }})" {% else %} style="background-image:url({{ url('theme://images/default.jpg') }});" {% endif %}>
    <div class="container">
      <div class="row">
        <div class="col-lg-5 ml-auto">
          <article class="hero__content px-5 py-5">
              {{ content|raw }}
          </article>
        </div>
      </div>
    </div>
    <div class="shape shape--bottom">
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 3000 200">
        <g>
        	<path fill="#FFFFFF" d="M3000,1.1C2474.9,171.8,454.4,200,0,200h3000V1.1z"/>
        </g>
      </svg>
    </div>
</section>
