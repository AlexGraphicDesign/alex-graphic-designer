<div class="card">
    {% set image = page.media.images|first %}
    {% if image %}
    <div class="card-img">
        <a href="{{ page.url }}">{{ image.cropZoom(800,400).html|raw }}</a>
    </div>
    {% endif %}
    <div class="card-header">
        {% include 'partials/blog/title.html.twig' with {title_level: 'h5'} %}
    </div>
    <div class="card-body">
      {% include 'partials/blog/date.html.twig' with {post_date: page.date} %}
      <p class="card-text">
        {% if page.summary != page.content %}
            {{ page.summary|striptags }}
        {% else %}
            {{ page.content|striptags }}
        {% endif %}
      </p>
      <a href="{{ page.url }}" title="card link" class="card-link">Card link</a>
    </div>
    <div class="card-footer">
        {% include 'partials/blog/taxonomy.html.twig' %}
    </div>
</div>
