<article class="card blog__item">
    {% set image = page.media.images|first %}
    {% if image %}
      <a href="{{ page.url }}" title="{{ page.title }}" itemprop="url" class="card-img-top">
        {{ image.cropZoom(800,500).html('', page.title, 'card-img')|raw }}
        <div class="shape shape--bottom">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1042 225.9"><defs><style>.cls-1{fill:#fff;}</style></defs><path class="cls-1" d="M0,225.9S657.36,225.9,1042,0V225.9Z"/></svg>
        </div>
      </a>
    {% endif %}
    <div class="card-body">
      <div class="card-tags">
        {% include 'partials/taxonomy.html.twig' %}
      </div>
      {% include 'partials/blog/title.html.twig' with {title_level: 'h4'} %}
      <p class="card-text" itemprop="description">
        {% if page.summary != page.content %}
            {{ page.summary|striptags }}
        {% else %}
            {{ page.content|striptags }}
        {% endif %}
      </p>
      <a href="{{ page.url }}" title="{{ page.title }}" class="btn btn-outline-primary card-link">Lire l'article</a>
    </div>
    <div class="card-footer meta__elements">
      {% include 'partials/blog/author.html.twig' %}
      {% include 'partials/blog/date.html.twig' with {post_date: post.date} %}
    </div>
</article>
