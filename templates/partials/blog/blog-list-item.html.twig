<article class="card my-4">
    {% set image = page.media.images|first %}
    {% if image %}
    <a href="{{ page.url }}" title="{{ page.title }}">{{ image.cropZoom(800,500).html('', page.title, 'card-img')|raw }}</a>
    {% endif %}
    <div class="card-body">
      {% include 'partials/blog/title.html.twig' with {title_level: 'h5'} %}
      <p class="card-text">
        {% if page.summary != page.content %}
            {{ page.summary|striptags }}
        {% else %}
            {{ page.content|striptags }}
        {% endif %}
      </p>
      <a href="{{ page.url }}" title="{{ page.title }}" class="card-link">Card link</a>
      {% include 'partials/blog/taxonomy.html.twig' %}
      <div class="text-right mt-2">
        {% include 'partials/blog/author.html.twig' %}
        {% include 'partials/blog/date.html.twig' with {post_date: page.date} %}
      </div>
    </div>
</article>
