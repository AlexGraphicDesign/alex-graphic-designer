<section id="{% if page.header.redirect %}{{ page.header.redirect }}{% else %}{{ page.menu|lower|replace({' ': '-'})}}{% endif %}" class="section services py-6" itemscope itemtype="http://schema.org/Service">
  <div class="container">
    <div class="section__title mb-4">
      <h2 class="title">{{page.title|capitalize }}</h2>
    </div>
    <div class="row justify-content-center">
      {% if page.header.services|length > 0 %}
        {% for item in page.header.services %}
        {% set icon = page.media[item.servicesIcon] %}
          <div class="col-sm-10 col-md-6 col-lg-4 mb-4 mb-lg-0">
            <div class="services__item h-100">
              {% if icon %}
                {{ icon.resize(80, 80).html('', 'test', 'img-fluid')|raw }}
              {% endif %}
              <div class="services__content mt-4">
                <h3 class="services__title" itemprop="offers">{{ item.servicesTitle }}</h3>
                <p class="services__text mt-3">{{ item.servicesDesc }}</p>
                <a class="btn btn-outline-primary" title="{{ item.servicesTitle }} - {{ config.site.title }}" href="{{item.servicesURL}}">{{item.servicesBtnText}}</a>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>
