<section id="{% if page.header.redirect %}{{ page.header.redirect }}{% else %}{{ page.menu|lower|replace({' ': '-'})}}{% endif %}" class="section blog">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12">
        <div class="section__title text-center pb-5">
          <h2 class="title">Blog</h2>
        </div>
      </div>
    </div>
    <div class="row">
      {% for post in page.find('/blog').children.order('date', 'desc').slice(0, 4) %}
      {% set image = post.media.images|first %}
        <div class="col-sm-12 col-md-6 col-lg-3">
          <div class="card mt-4">
            {% if image %}
              <a href="{{ post.url }}" title="{{ post.title }}"><img class="card-img" src="{{ image.url }}" alt="Card Image"></a>
            {% endif %}
            <div class="card-body">
              <h5 class="card-title">{{ post.title }}</h5>
                {% include 'partials/blog/date.html.twig' %}
              <p class="card-text">{{ post.content|striptags }}<br/>
              {{ dump(image.url) }}</p>
              <a href="{{ post.url }}" title="{{ post.title }}" class="btn btn-outline-custom-primary btn-rounded text-center">Lire l'article</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
