<section id="{% if page.header.redirect %}{{ page.header.redirect }}{% else %}{{ page.menu|lower|replace({' ': '-'})}}{% endif %}" class="section blog">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12">
        <div class="section__title text-center pb-5">
          <h2 class="title">Blog</h2>
        </div>
      </div>
    </div>
    <div class="row align-items-center justify-content-center">
      {% for post in page.find('/blog').children.order('date', 'desc').slice(0, 4) %}
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
          <div class="card" style="box-shadow: 0 0 30px 0 rgba(167,167,167,.16); border:0; border-radius: 2em 2em 2em 0; overflow: hidden;">
            <img class="card-img-top" src="{{ url('theme://images/default.jpg') }}" alt="Card Image">
            <div class="card-body">
              <h5 class="card-title">Card title</h5>
              <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
              <a href="{{ post.url }}" class="card-link">Card link</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
