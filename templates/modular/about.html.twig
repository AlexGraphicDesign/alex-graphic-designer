<section id="{% if page.header.redirect %}{{ page.header.redirect }}{% else %}{{ page.menu|lower|replace({' ': '-'})}}{% endif %}" class="section about">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-sm-12 col-md-6">
        <div class="about__content mt-4 mb-4">
          <div class="section__title text-left">
            <h2 class="title">{{page.title|capitalize }}</h2>
          </div>
          {{ page.content }}
          {% if page.header.buttonLink or page.header.buttonTitle or page.header.buttonText %}
          <a href="{{page.header.buttonLink}}" title="{{page.header.buttonTitle}} - {{ config.site.title }}" class="btn btn-rounded btn-outline-custom-primary">{{page.header.buttonText}}</a>
          {% endif %}
        </div>
      </div>
      <div class="col-sm-12 col-md-6">
        <div class="about__img">
          <img src="{{ page.media[header.img].url }}" class="img-fluid" alt="{{page.header.altImg}} - {{ config.site.title }}"/>
        </div>
      </div>
    </div>
  </div>
  <div class="about-shape" style="position: absolute;top: 0; right: 0; width: 35%; height: 100%; z-index: -1;">
    <img class="img-fluid" src="{{ url('theme://images/shape-1.svg') }}"/>
  </div>
</section>
